---
import Tag from './Tag.astro';
import { format } from '../helpers/date.ts';

const { post } = Astro.props;
---
<style lang="scss">
.preview {
  border-top: 1px solid var(--border);
  color: var(--fg);
  display: block;
  font-weight: 300;
  line-height: 1;
  margin: 1rem 0;
  padding: 1rem;
  position: relative;
  text-decoration: none;

  &:first-of-type {
    margin-top: 0;
  }
}

.date {
  display: block;

  @media (min-width: 600px) {
    margin: 1em 0;
  }
}

.summary {
  line-height: 1.25;

  @media (min-width: 600px) {
    margin-top: -0.25rem;
  }
}

.simlink {
  display: flex;
  align-self: end;
  justify-content: flex-end;
  font-weight: 600;
  font-family: var(--heading);
}

.tag {
  position: absolute;
  right: 100%;
  top: -1px;
}

.title {
  display: block;
  font-size: var(--u4);
  font-weight: 700;
  margin-bottom: 0;
  margin-top: 0;

  @media (min-width: 600px) {
    grid-column: span 5;
  }
}

</style>

<a class="preview" href={post.url} itemscope itemtype="http://schema.org/BlogPosting">
  <span class="title" itemprop="headline">{post.title}</span>
  <time class="date" datetime={post.date} itemprop="datePublished">{format(post.date)}</time>
  <div class="summary" itemprop="description">{post.description}</div>
  <div class="tag">
    {(post.tags || []).map((tag) => (<Tag tag={tag} />))}
  </div>
</a>
