<style lang="scss" is:global>
$near: 10%;
$far: 80%;

.rings-wrapper {
  width: 48px;
  height: 96px;
  margin: 5rem auto;
}

.ring {
  width: 48px;
  border: 2px solid var(--bg);
  border-radius: 50%;
  height: 48px;
  mix-blend-mode: exclusion;
  position: absolute;
  top: 0;
  left: 0;
}

.ring:nth-child(1) {
  background: #f00;
  animation: bloom1 5s infinite;
  transform: translateY($near);
}
.ring:nth-child(2) {
  background: #00f;
  animation: bloom2 7s infinite;
  transform: rotate(120deg) translateY($near);
}
.ring:nth-child(3) {
  background: #fd0;
  animation: bloom3 9s infinite;
  transform: rotate(240deg) translateY($near);
}

.rings {
  animation: twirl 3s infinite linear;
  position: relative;
  transform-origin: 50% 50%;
  width: 64px;
  height: 64px;
}

@keyframes twirl {
  to {
    transform: rotate(1turn);
  }
}

@keyframes bloom1 {
  50% {
    transform: translateY($far);
  }
}
@keyframes bloom2 {
  50% {
    transform: rotate(120deg) translateY($far);
  }
}
@keyframes bloom3 {
  50% {
    transform: rotate(240deg) translateY($far);
  }
}
</style>

<div class="rings-wrapper">
  <div class="rings">
    <div class="ring"></div>
    <div class="ring"></div>
    <div class="ring"></div>
  </div>
</div>

<slot />
