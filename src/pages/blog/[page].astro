---
import { getCollection } from 'astro:content'
import BlogPost from '../../components/BlogPost.astro';
import Head from '../../components/Head.astro';
import Nav from '../../components/Nav.astro';

const { page } = Astro.props;

export async function getStaticPaths({ paginate }) {
  const allPosts = await getCollection('blog');
  const sortedPosts = allPosts.filter((p) => !!p.data.pubDate).sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate));
  return paginate(sortedPosts, { pageSize: 10 });
}
---

<html lang="en-us">
  <head>
    <Head title="blog" />
  </head>

  <body>
    <Nav />

    <div class="wrapper" itemscope itemtype="https://schema.org/Blog">
      {page.data.map((blogPost) => <BlogPost post={blogPost} />)}
    </div>
  </body>
</html>
